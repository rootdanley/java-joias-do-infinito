<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.joias.projeto.controllers.PartidaController">
    <children>
        <!-- Exibição de informações do Jogador 1 -->
        <VBox layoutX="100.0" layoutY="150.0" spacing="10" alignment="CENTER">
            <ImageView fx:id="imagemJogador1" fitHeight="200.0" fitWidth="200.0" />
            <Label fx:id="nomeJogador1" text="Jogador 1" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </VBox>

        <!-- Exibição de informações do Jogador 2 -->
        <VBox layoutX="500.0" layoutY="150.0" spacing="10" alignment="CENTER">
            <ImageView fx:id="imagemJogador2" fitHeight="200.0" fitWidth="200.0" />
            <Label fx:id="nomeJogador2" text="Jogador 2" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </VBox>

        <!-- Outros elementos da partida, como pontuação ou cronômetro, podem ser adicionados aqui -->
    </children>
</AnchorPane>
